@{
    ViewBag.Title = "考勤管理";
    Layout = "~/Views/Shared/_Index.cshtml";
}
<div class="am-layout" >
    <div class="am-layout-center">
        <div class="am-layout-wrap am-layout-wrap-notitle">
            <div class="am-layout-tool">
                <div class="am-layout-tool-left">
                    <div class="am-layout-tool-item">
                        <div class="am-searchtxt">打卡日期：</div>
                    </div>
                    <div class="am-layout-tool-item">
                        <div id="datesearch"></div>
                    </div>
                    <div class="am-layout-tool-item">
                        <div id="multiple_condition_query">
                            <div class="am-query-formcontent">

                                <div class="col-xs-12 am-form-item">
                                    <div class="am-form-item-title">用户编码</div>
                                    <input id="C_PersonId" type="text" class="form-control" />
                                </div>
                                <div class="col-xs-12 am-form-item">
                                    <div class="am-form-item-title">用户姓名</div>
                                    <input id="C_UserName" type="text" class="form-control"/>
                                </div>
                                <div class="col-xs-12 am-form-item">
                                    <div class="am-form-item-title">部门名称</div>
                                    <input id="D_Code" type="text" class="form-control" />
                                </div>
                                <div class="col-xs-12 am-form-item">
                                    <div class="am-form-item-title">班组名称</div>
                                    <input id="F_TeamName" type="text" class="form-control" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="am-layout-tool-right">
                    <div class=" btn-group btn-group-sm">
                        <a id="am_refresh" class="btn btn-default"><i class="fa fa-refresh"></i></a>
                    </div>
                    <div class=" btn-group btn-group-sm" ayma-authorize="yes">
                        @*<a id="am_add"   class="btn btn-default"><i class="fa fa-plus"></i>&nbsp;新增</a>*@
                        <a id="am_edit"  class="btn btn-default"><i class="fa fa-pencil-square-o"></i>&nbsp;查看详情</a>
                       @* <a id="am_delete" class="btn btn-default"><i class="fa fa-trash-o"></i>&nbsp;删除</a>*@
                        @*<a id="am_export" class="btn btn-default"><i class="fa fa-share-square-o"></i>&nbsp;导出</a>*@
                    </div>
                </div>
            </div>
            <div class="am-layout-body" id="girdtable"></div>
        </div>
    </div>
</div>
@Html.AppendJsFile("/Areas/MesDev/Views/CheckRecord/Index.js")
