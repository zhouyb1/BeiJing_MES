@{
    ViewBag.Title = "班组表";
    Layout = "~/Views/Shared/_Form.cshtml";
}
<div class="am-form-wrap" id="form">
 
    <div class="col-xs-6 am-form-item">
        <div class="am-form-item-title">班组编码<font face="宋体">*</font></div>
        <input id="T_Code" type="text" class="form-control" isvalid="yes" checkexpession="NotNull" />
    </div>
    <div class="col-xs-6 am-form-item">
        <div class="am-form-item-title">班组名称<font face="宋体">*</font></div>
        <input id="T_Name" type="text" class="form-control" isvalid="yes" checkexpession="NotNull" />
    </div>
    <div class="col-xs-6 am-form-item">
        <div class="am-form-item-title">车间名称<font face="宋体">*</font></div>
        <div id="T_WorkShopName" class="form-control" isvalid="yes" checkexpession="NotNull"></div>
    </div>
    <div class="col-xs-6 am-form-item">
        <div class="am-form-item-title">车间编码</div>
        <input id="T_WorkShopCode" type="text" class="form-control" disabled="disabled" />
    </div>
    <div class="col-xs-6 am-form-item">
        <div class="am-form-item-title">负责人<font face="宋体">*</font></div>
        <input id="T_UserName" type="text" class="form-control" isvalid="yes" checkexpession="NotNull" />
    </div>
    <div class="col-xs-6 am-form-item">
        <div class="am-form-item-title">备注</div>
        <input id="T_Remark" type="text" class="form-control"  />
    </div>
</div>
@Html.AppendJsFile("/Areas/MesDev/Views/Team/Form.js")
