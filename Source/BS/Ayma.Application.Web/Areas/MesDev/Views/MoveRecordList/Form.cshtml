@{
    ViewBag.Title = "人员走动记录列表";
    Layout = "~/Views/Shared/_Form.cshtml";
}
<div class="am-form-wrap" id="form">
    <div class="col-xs-6 am-form-item"  data-table="Mes_MoveRecord" >
        <div class="am-form-item-title">用户编码<font face="宋体">*</font></div>
        <input id="M_UserCode" type="text" class="form-control" isvalid="yes" checkexpession="NotNull" />
    </div>
    <div class="col-xs-6 am-form-item"  data-table="Mes_MoveRecord" >
        <div class="am-form-item-title">用户名称<font face="宋体">*</font></div>
        <input id="M_UserName" type="text" class="form-control" isvalid="yes" checkexpession="NotNull" />
    </div>
    <div class="col-xs-6 am-form-item"  data-table="Mes_MoveRecord" >
        <div class="am-form-item-title">iP<font face="宋体">*</font></div>
        <input id="M_IP" type="text" class="form-control" isvalid="yes" checkexpession="NotNull" />
    </div>
    <div class="col-xs-6 am-form-item" data-table="Mes_MoveRecord">
        <div class="am-form-item-title">RFID编码<font face="宋体">*</font>
        </div>
        <input id="M_RFIDCode" type="text" class="form-control" isvalid="yes" checkexpession="NotNull"/>
    </div>
    <div class="col-xs-6 am-form-item" data-table="Mes_MoveRecord">
        <div class="am-form-item-title">门编码<font face="宋体">*</font></div>
        <div id="M_DoorCode" class="form-control" isvalid="yes" checkexpession="NotNull" ></div>
    </div>
    <div class="col-xs-6 am-form-item"  data-table="Mes_MoveRecord" >
        <div class="am-form-item-title">门名称</div>
        <input id="M_DoorName" type="text" class="form-control" disabled="disabled" style="background: #f1efef; " />
    </div>
    <div class="col-xs-6 am-form-item"  data-table="Mes_MoveRecord" >
        <div class="am-form-item-title">记录时间<font face="宋体">*</font></div>
        <input id="M_Date" type="text" class="form-control am-input-wdatepicker" onfocus="WdatePicker({ dateFmt: 'yyyy-MM-dd HH:mm:ss' })" value="@DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss")" isvalid="yes" checkexpession="NotNull" />
    </div>
    <div class="col-xs-6 am-form-item"  data-table="Mes_MoveRecord" >
        <div class="am-form-item-title">备注</div>
        <input id="M_Remark" type="text" class="form-control"  />
    </div>
</div>
@Html.AppendJsFile("/Areas/MesDev/Views/MoveRecordList/Form.js")
