@{
    ViewBag.Title = "领料单";
    Layout = "~/Views/Shared/_GirdForm.cshtml";
}
<div class="am-form-wrap" id="form">
    <div class="col-xs-6 am-form-item" data-table="Mes_CollarHead">
        <div class="am-form-item-title">单据号码</div>
        <input id="C_CollarNo" type="text" class="form-control" disabled="disabled" placeholder="系统自动生成" />
    </div>
    <div class="col-xs-6 am-form-item" data-table="Mes_CollarHead" style="display:none">
        <div class="am-form-item-title">原料仓库<font face="宋体">*</font></div>
        <div id="C_StockName" class="form-control"></div>
    </div>
    <div class="col-xs-6 am-form-item" data-table="Mes_CollarHead" style="display:none">
        <div class="am-form-item-title">原料仓编码</div>
        <input id="C_StockCode" type="text" class="form-control" disabled="disabled" style="background: #f1efef" />
    </div>
    <div class="col-xs-6 am-form-item" data-table="Mes_CollarHead">
        <div class="am-form-item-title">领料仓库<font face="宋体">*</font></div>
        <div id="C_StockToName" class="form-control" isvalid="yes" checkexpession="NotNull"></div>
    </div>
    <div class="col-xs-6 am-form-item" data-table="Mes_CollarHead">
        <div class="am-form-item-title">领料仓编码</div>
        <input id="C_StockToCode" type="text" class="form-control" disabled="disabled" style="background: #f1efef" />
    </div>
    <div class="col-xs-6 am-form-item" data-table="Mes_OutWorkShopHead">
        <div class="am-form-item-title">单据日期<font face="宋体">*</font></div>
        <input id="C_OrderDate" type="text" class="form-control am-input-wdatepicker" onfocus="WdatePicker({ dateFmt: 'yyyy-MM-dd' })" value="@DateTime.Now.ToString("yyyy-MM-dd")" isvalid="yes" checkexpession="NotNull" disabled="@ViewBag.disabled" />
    </div>
    <div class="col-xs-6 am-form-item" data-table="Mes_CollarHead">
        <div class="am-form-item-title">备注</div>
        <input id="C_Remark" type="text" class="form-control" />
    </div>
    <div class="col-xs-12 am-form-item" data-table="Mes_CollarHead">
        <div class="am-form-item-title"></div>
        <a id="am_add" class="btn btn-default"><i class="fa fa-plus"></i>&nbsp;添加物料</a>
    </div>
   
    <div class="col-xs-12 am-form-item am-form-item-grid">
        <div id="Mes_CollarDetail"></div>
    </div>
</div>
@Html.AppendJsFile("/Areas/MesDev/Views/PickingMater/Form.js")
