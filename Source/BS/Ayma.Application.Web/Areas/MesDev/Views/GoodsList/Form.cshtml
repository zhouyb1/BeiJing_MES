@{
    ViewBag.Title = "物料列表";
    Layout = "~/Views/Shared/_Form.cshtml";
}
<div class="am-form-wrap" id="form">
    <div class="col-xs-6 am-form-item"  data-table="Mes_Goods" >
        <div class="am-form-item-title">商品编码<font face="宋体">*</font></div>
        <input id="G_Code" type="text" class="form-control" isvalid="yes" checkexpession="NotNull" />
    </div>
    <div class="col-xs-6 am-form-item"  data-table="Mes_Goods" >
        <div class="am-form-item-title">商品名称<font face="宋体">*</font></div>
        <input id="G_Name" type="text" class="form-control" isvalid="yes" checkexpession="NotNull" />
    </div>
    <div class="col-xs-6 am-form-item"  data-table="Mes_Goods" >
        <div class="am-form-item-title">商品类型<font face="宋体">*</font></div>
        <div id="G_Kind" class="form-control" isvalid="yes" checkexpession="NotNull"></div>
    </div>
    <div class="col-xs-6 am-form-item"  data-table="Mes_Goods" >
        <div class="am-form-item-title">保质时间<font face="宋体">*</font></div>
        <input id="G_Period" type="text" class="form-control am-input-wdatepicker" onfocus="WdatePicker({ dateFmt: 'yyyy-MM-dd' })" value="@DateTime.Now.ToString("yyyy-MM-dd")" isvalid="yes" checkexpession="NotNull" />
    </div>
    <div class="col-xs-6 am-form-item"  data-table="Mes_Goods" >
        <div class="am-form-item-title">价格<font face="宋体">*</font></div>
        <input id="G_Price" type="number" class="form-control" isvalid="yes" checkexpession="NotNull" />
    </div>
    <div class="col-xs-6 am-form-item" data-table="Mes_Goods">
        <div class="am-form-item-title">单位<font face="宋体">*</font>
        </div>
        <div id="G_Unit" class="form-control" isvalid="yes" checkexpession="NotNull"></div>
    </div>
    <div class="col-xs-6 am-form-item" data-table="Mes_Goods">
        <div class="am-form-item-title">供应商编码<font face="宋体">*</font></div>
        <div id="G_SupplyCode" class="form-control" isvalid="yes" checkexpession="NotNull"></div>
    </div>
    <div class="col-xs-6 am-form-item"  data-table="Mes_Goods" >
        <div class="am-form-item-title">供应商名称<font face="宋体">*</font></div>
        <input id="G_Supply" class="form-control" isvalid="yes" checkexpession="NotNull" disabled="disabled" style="background: #f1efef" />
    </div>
    <div class="col-xs-6 am-form-item"  data-table="Mes_Goods" >
        <div class="am-form-item-title">数量<font face="宋体">*</font></div>
        <input id="G_Qty" type="number" class="form-control" isvalid="yes" checkexpession="NotNull" />
    </div>
    <div class="col-xs-6 am-form-item"  data-table="Mes_Goods" >
        <div class="am-form-item-title">上限预警比例</div>
        <input id="G_Super" type="number" class="form-control" />
    </div>
    <div class="col-xs-6 am-form-item"  data-table="Mes_Goods" >
        <div class="am-form-item-title">下限预警比例</div>
        <input id="G_Lower" type="number" class="form-control" />
    </div>
    <div class="col-xs-6 am-form-item"  data-table="Mes_Goods" >
        <div class="am-form-item-title">备注</div>
        <input id="G_Remark" type="text" class="form-control"  />
    </div>
</div>
@Html.AppendJsFile("/Areas/MesDev/Views/GoodsList/Form.js")
