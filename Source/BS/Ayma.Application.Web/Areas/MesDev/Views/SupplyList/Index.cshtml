@{
    ViewBag.Title = "供应商列表";
    Layout = "~/Views/Shared/_Index.cshtml";
}
<div class="am-layout" >
    <div class="am-layout-center">
        <div class="am-layout-wrap am-layout-wrap-notitle">
            <div class="am-layout-tool">
                <div class="am-layout-tool-left">
                    <div class="am-layout-tool-item">
                        <div id="multiple_condition_query">
                            <div class="am-query-formcontent">
                                <div class="col-xs-6 am-form-item">
                                    <div class="am-form-item-title">供应商编码</div>
                                    <input id="S_Code" type="text" class="form-control" />
                                </div>
                                <div class="col-xs-6 am-form-item">
                                    <div class="am-form-item-title">供应商名称</div>
                                    <input id="S_Name" type="text" class="form-control" />
                                </div>
                                <div class="col-xs-6 am-form-item">
                                    <div class="am-form-item-title">联系人</div>
                                    <input id="S_Person" type="text" class="form-control" />
                                </div>
                                <div class="col-xs-6 am-form-item">
                                    <div class="am-form-item-title">联系电话</div>
                                    <input id="S_Telephone" type="text" class="form-control" />
                                </div>
                                <div class="col-xs-6 am-form-item">
                                    <div class="am-form-item-title">法人</div>
                                    <input id="S_Corp" type="text" class="form-control" />
                                </div>
                                <div class="col-xs-6 am-form-item">
                                    <div class="am-form-item-title">地址</div>
                                    <input id="S_Address" type="text" class="form-control" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="am-layout-tool-right">
                    <div class=" btn-group btn-group-sm">
                        <a id="am_refresh" class="btn btn-default"><i class="fa fa-refresh"></i>&nbsp;刷新</a>
                    </div>
                    <div class=" btn-group btn-group-sm" ayma-authorize="yes">
                        <a id="am_add"   class="btn btn-default"><i class="fa fa-plus"></i>&nbsp;新增</a>
                        <a id="am_edit"  class="btn btn-default"><i class="fa fa-pencil-square-o"></i>&nbsp;编辑</a>
                        <a id="am_delete" class="btn btn-default"><i class="fa fa-trash-o"></i>&nbsp;删除</a>
                        <a id="am_import" class="btn btn-default"><i class="fa fa-sign-in"></i>&nbsp;导入</a>
                    </div>
                </div>
            </div>
            <div class="am-layout-body" id="girdtable"></div>
        </div>
    </div>
</div>
@Html.AppendJsFile("/Areas/MesDev/Views/SupplyList/Index.js")
