@{
    ViewBag.Title = "退供应商单制作";
    Layout = "~/Views/Shared/_GirdForm.cshtml";
}
<style>
    .jfgrid-data-cell {
        border-bottom: 1px solid #ddd;
        border-right: 1px solid #ddd;
    }
</style>
<div class="am-form-wrap" id="form">
    <div class="col-xs-6 am-form-item"  data-table="Mes_BackSupplyHead" >
        <div class="am-form-item-title">退供应商单号</div>
        <input id="B_BackSupplyNo" type="text" placeholder="系统自动生成" class="form-control" readonly="readonly" />
    </div>
    <div class="col-xs-6 am-form-item"  data-table="Mes_BackSupplyHead" >
        <div class="am-form-item-title">仓库编码<font face="宋体">*</font></div>
        <div id="b_stockcode" class="form-control" isvalid="yes" checkexpession="NotNull"></div>
    </div>
    <div class="col-xs-6 am-form-item"  data-table="Mes_BackSupplyHead" >
        <div class="am-form-item-title">仓库名称<font face="宋体">*</font></div>
        <input id="b_stockname" type="text" class="form-control" isvalid="yes" checkexpession="NotNull" readonly="readonly" />
    </div>
    <div class="col-xs-6 am-form-item"  data-table="Mes_BackSupplyHead" >
        <div class="am-form-item-title">日期</div>
        <input id="B_OrderDate" type="text" class="form-control am-input-wdatepicker" onfocus="WdatePicker({ dateFmt: 'yyyy-MM-dd HH:mm:ss' })" value="@DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss")" isvalid="yes" checkexpession="NotNull" />
    </div>
    <div class="col-xs-6 am-form-item"  data-table="Mes_BackSupplyHead" >
        <div class="am-form-item-title">备注</div>
        <input id="B_Remark" type="text" class="form-control"  />
    </div>
    @*<div class="col-xs-12 am-form-item" data-table="Mes_BackSupplyHead">
        <div class="am-form-item-title"></div>
        <a id="am_add" class="btn btn-default"><i class="fa fa-plus"></i>&nbsp;添加物料</a>
    </div>*@
    <div class="col-xs-12 am-form-item am-form-item-grid" >
        <div id="Mes_BackSupplyDetail"></div>
    </div>
</div>
@Html.AppendJsFile("/Areas/MesDev/Views/Mes_BackSupply/AddForm.js")
