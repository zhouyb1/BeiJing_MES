
@{
    ViewBag.Title = "原辅料统计";
    Layout = "~/Views/Shared/_Form.cshtml";
}
<div class="am-form-wrap" id="form">
    <div class="col-xs-12 am-form-item">
        <div class="am-form-item-title">配方</div>
        <div id="B_ParentID"></div>
    </div>
    <div class="col-xs-6 am-form-item" data-table="B_BusinessCategory">
        <div class="am-form-item-title">工艺代码</div>
        <div id="B_RecordCode"></div>

    </div>
    <div class="col-xs-6 am-form-item" data-table="Mes_BomHead">
        <div class="am-form-item-title">工序号</div>
        <div id="B_ProNo"></div>
    </div>
    <div class="col-xs-6 am-form-item">
        <div class="am-form-item-title">物料编码<font face="宋体">*</font></div>
        <input id="B_GoodsCode" type="text" class="form-control" isvalid="yes" checkexpession="NotNull" />
    </div>
    <div class="col-xs-6 am-form-item">
        <div class="am-form-item-title">物料名称<font face="宋体">*</font></div>
        <input id="B_GoodsName" type="text" class="form-control" isvalid="yes" checkexpession="NotNull" />
    </div>
    <div class="col-xs-6 am-form-item">
        <div class="am-form-item-title">数量</div>
        <input id="B_Qty" type="number" class="form-control" />
    </div>
    <div class="col-xs-6 am-form-item">
        <div class="am-form-item-title">单位</div>
        <input id="B_Unit" type="text" class="form-control" />
    </div>
    <div class="col-xs-6 am-form-item" data-table="Mes_BomHead">
        <div class="am-form-item-title">开始时间</div>
        <input id="B_StartTime" type="text" class="form-control am-input-wdatepicker" onfocus="WdatePicker({ onpicked: function () { $('#B_StartTime').trigger('change'); } })" value="@DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss")" />
    </div>
    <div class="col-xs-6 am-form-item" data-table="Mes_BomHead">
        <div class="am-form-item-title">截止时间</div>
        <input id="B_EndTime" type="text" class="form-control am-input-wdatepicker" onfocus="WdatePicker({ onpicked: function () { $('#B_EndTime').trigger('change'); } })" value="@DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss")" />
    </div>
    <div class="col-xs-6 am-form-item">
        <div class="am-form-item-title">是否有效<font face="宋体">*</font></div>
        <div id="B_Avail" isvalid="yes" checkexpession="NotNull"></div>
    </div>
