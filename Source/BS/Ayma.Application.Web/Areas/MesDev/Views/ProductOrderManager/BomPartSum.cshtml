@{
    ViewBag.Title = "原辅料统计";
    Layout = "~/Views/Shared/_GirdForm.cshtml";
}
<style>
    .jfgrid-data-cell {
        border-bottom: 1px solid #ddd;
        border-right: 1px solid #ddd;
    }
</style>
<div class="am-form-wrap" id="form">

    <div class="col-xs-4 am-form-item">
        <div class="am-form-item-title">选择商品<font face="宋体">*</font></div>
        <div id="P_GoodsCode"></div>
    </div>
    <div class="col-xs-4 am-form-item">
        <div class="am-form-item-title">选择配方<font face="宋体">*</font></div>
        <div id="B_ParentID"></div>
    </div>
    <div class="col-xs-4 am-form-item" data-table="Mes_CollarHead"  hidden="hidden">
        <div class=" am-form-item-title">订单号</div>
        <input type="text" class="form-control" hidden="hidden" id="P_OrderNo" />
    </div>
    <div class="col-xs-4 am-form-item" data-table="Mes_CollarHead">
        <div class="am-form-item-title">原料仓库<font face="宋体">*</font></div>
        <div id="C_StockCode" class="form-control" isvalid="yes" checkexpession="NotNull"></div>
    </div>
    <div class="col-xs-4 am-form-item" data-table="Mes_CollarHead">
        <div class=" am-form-item-title">领料仓库<font face="宋体">*</font></div>
        <div id="C_StockToCode" class="form-control" isvalid="yes" checkexpession="NotNull"></div>
    </div>
    <div class="col-xs-4 am-form-item">
        <div class="am-form-item-title">订单数目</div>
        <input id="B_Qty" type="text" class="form-control" disabled="disabled" />
    </div>
    <div class="col-xs-12 am-form-item am-form-item-grid">
        <div id="girdtable"></div>
    </div>   
    <div class="col-xs-4 am-form-item" data-table="Mes_CollarHead" hidden="hidden">
        <div class="am-form-item-title">原料仓库名<font face="宋体">*</font></div>
        <input id="C_StockName" type="text" class="form-control" />
    </div>
    <div class="col-xs-4 am-form-item" data-table="Mes_CollarHead" hidden="hidden">
        <div class="am-form-item-title">领料仓库名称<font face="宋体">*</font></div>
        <input id="C_StockToName" type="text" class="form-control" />
    </div>
    @*<div class="col-xs-4 am-form-item" data-table="Mes_CollarHead">
        <div class=" am-form-item-title">领料班组</div>
        <div id="C_TeamCode" class="form-control" isvalid="yes" checkexpession="NotNull"></div>
    </div>*@
</div>

@Html.AppendJsFile("/Areas/MesDev/Views/ProductOrderManager/BomPartSum.js")