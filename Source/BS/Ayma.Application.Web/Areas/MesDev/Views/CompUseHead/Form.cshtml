@{
    ViewBag.Title = "强制使用记录单据";
    Layout = "~/Views/Shared/_GirdForm.cshtml";
}
<style>
    .jfgrid-data-cell {
        border-bottom: 1px solid #ddd;
        border-right: 1px solid #ddd;
    }
</style>
<div class="am-form-wrap" id="form">
    <div class="col-xs-6 am-form-item"  data-table="Mes_CompUseHead" >
        <div class="am-form-item-title">单据号码</div>
        <input id="C_No" type="text"  class="form-control" disabled="disabled" placeholder="系统自动生成" />
    </div>
    <div class="col-xs-6 am-form-item" data-table="Mes_CompUseHead">
        <div class="am-form-item-title">车间<font face="宋体">*</font>
        </div>
        <div id="C_WorkShop" type="text" class="form-control" checkexpession="NotNull"></div>
    </div>
    <div class="col-xs-6 am-form-item" data-table="Mes_CompUseHead">
        <div class="am-form-item-title">仓库名称<font face="宋体">*</font></div>
        <div id="C_StockName" class="form-control" isvalid="yes" checkexpession="NotNull"></div>
    </div>
    <div class="col-xs-6 am-form-item" data-table="Mes_CompUseHead">
        <div class="am-form-item-title">仓库编码<font face="宋体">*</font></div>
        <input id="C_StockCode" type="text" class="form-control" isvalid="yes" checkexpession="NotNull" readonly="readonly" />
    </div>
    <div class="col-xs-6 am-form-item"  data-table="Mes_CompUseHead" >
        <div class="am-form-item-title">生产订单号<font face="宋体">*</font></div>
        <div id="C_OrderNo" type="text" class="form-control" isvalid="yes" checkexpession="NotNull"></div>
    </div>
    <div class="col-xs-6 am-form-item"  data-table="Mes_CompUseHead" >
        <div class="am-form-item-title">订单时间<font face="宋体">*</font></div>
        <input id="C_OrderDate" type="text" class="form-control am-input-wdatepicker" onfocus="WdatePicker({ dateFmt: 'yyyy-MM-dd HH:mm:ss' })" value="@DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss")" isvalid="yes" checkexpession="NotNull" />
    </div>
    <div class="col-xs-6 am-form-item" data-table="Mes_CompUseHead">
        <div class="am-form-item-title">备注</div>
        <input id="C_Remark" type="text" class="form-control" />
    </div>
    <div class="col-xs-6 am-form-item" data-table="Mes_CompUseHead">
        <div class="am-form-item-title">状态</div>
        <div id="C_Status" class="form-control" disabled="disabled"></div>

    </div>

   
    <div class="col-xs-12 am-form-item" data-table="Mes_CompUseHead">
        <div class="am-form-item-title"></div>
        <a id="am_add" class="btn btn-default"><i class="fa fa-plus"></i>&nbsp;添加物料</a>
    </div>
    <div class="col-xs-12 am-form-item am-form-item-grid" >
        <div id="Mes_CompUseDetail"></div>
    </div>
</div>
@Html.AppendJsFile("/Areas/MesDev/Views/CompUseHead/Form.js")
