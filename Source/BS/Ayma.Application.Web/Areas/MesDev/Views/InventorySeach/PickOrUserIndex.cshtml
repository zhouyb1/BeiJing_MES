@{
    ViewBag.Title = "物料领用和使用情况查询";
    Layout = "~/Views/Shared/_Index.cshtml";
}
<div class="am-layout" >
    <div class="am-layout-center">
        <div class="am-layout-wrap am-layout-wrap-notitle">
            <div class="am-layout-tool">
                <div class="am-layout-tool-left">
                    <div class="am-layout-tool-item">
                    </div>
                    <div class="am-layout-tool-item">
                        <div id="datesearch"></div>
                    </div>
                    <div class="am-layout-tool-item">
                        <div id="multiple_condition_query">
                            <div class="am-query-formcontent">
                                <div class="col-xs-6 am-form-item">
                                    <div class="am-form-item-title">仓库编码</div>
                                    @*<input id="StockCode" type="text" class="form-control"/>*@
                                    <div id="StockCode" s class="form-control"></div>
                                </div>
                                <div class="col-xs-6 am-form-item">
                                    <div class="am-form-item-title">商品名称</div>
                                    <div id="GoodsCode" type="text" class="form-control" ></div>
                                </div>
                                 <div class="col-xs-12 am-form-item">
                                    <div class="am-form-item-title">提交时间</div>
                                    <div id="area" class="col-xs-5 am-form-area">
                                        <input id="StartTime" type="text" class="form-control time" onfocus="WdatePicker({ dateFmt: 'yyyy-MM-dd 00:00:00' })" value="@DateTime.Now.AddDays(-6).ToString("yyyy-MM-dd 00:00:00")" isvalid="yes" checkexpession="NotNull" />
                                    </div>
                                    <div class="am-form-item-title" style="margin-left: 45%">至</div>
                                    <div class="col-xs-5" style="margin-left: 16%">
                                        <input id="EndTime" type="text" class="form-control time" onfocus="WdatePicker({ dateFmt: 'yyyy-MM-dd 23:59:59' })" value="@DateTime.Now.ToString("yyyy-MM-dd 23:59:59")" isvalid="yes" checkexpession="NotNull" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="am-layout-tool-right">
                    <div class=" btn-group btn-group-sm">
                        <a id="am_refresh" class="btn btn-default"><i class="fa fa-refresh"></i></a>
                    </div>

                </div>
            </div>
            <div style="height: 270px;" class="am-layout-body" id="pickgirdtable"></div>
       
            <div style="height: 180px;" class="am-layout-body" id="usedgirdtable"></div>
        </div>
    </div>
</div>
@Html.AppendJsFile("/Areas/MesDev/Views/InventorySeach/PickOrUserIndex.js")
