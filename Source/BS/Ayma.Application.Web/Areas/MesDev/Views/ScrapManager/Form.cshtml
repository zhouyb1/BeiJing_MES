@{
    ViewBag.Title = "报废单据管理";
    Layout = "~/Views/Shared/_GirdForm.cshtml";
}
<div class="am-form-wrap" id="form">
    <div class="col-xs-6 am-form-item"  data-table="Mes_ScrapHead" >
        <div class="am-form-item-title">单据号码</div>
        <input id="S_ScrapNo" type="text" class="form-control" disabled="disabled" placeholder="系统自动生成" />
    </div>
    <div class="col-xs-6 am-form-item" data-table="Mes_ScrapHead">
        <div class="am-form-item-title">仓库名称<font face="宋体">*</font></div>
        <div id="S_StockName" class="form-control" isvalid="yes" checkexpession="NotNull"></div>
    </div>
    <div class="col-xs-6 am-form-item"  data-table="Mes_ScrapHead" >
        <div class="am-form-item-title">仓库编码</div>
        <input id="S_StockCode" type="text" class="form-control" disabled="disabled" style="background: #f1efef" />
    </div>
    <div class="col-xs-6 am-form-item"  data-table="Mes_ScrapHead" >
        <div class="am-form-item-title">订单时间</div>
        <input id="S_OrderDate" type="text" class="form-control am-input-wdatepicker" onfocus="WdatePicker({ dateFmt: 'yyyy-MM-dd HH:mm:ss' })" value="@DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss")" isvalid="yes" checkexpession="NotNull" />
    </div>
    <div class="col-xs-6 am-form-item"  data-table="Mes_ScrapHead" >
        <div class="am-form-item-title">备注</div>
        <input id="S_Remark" type="text" class="form-control"  />
    </div>
    <div class="col-xs-12 am-form-item" data-table="Mes_RequistHead">
        <div class="am-form-item-title"></div>
        <a id="am_add" class="btn btn-default"><i class="fa fa-plus"></i>&nbsp;添加物料</a>
    </div>
    <div class="col-xs-12 am-form-item am-form-item-grid">
        <div id="Mes_ScrapDetail"></div>
    </div>
</div>
@Html.AppendJsFile("/Areas/MesDev/Views/ScrapManager/Form.js")
