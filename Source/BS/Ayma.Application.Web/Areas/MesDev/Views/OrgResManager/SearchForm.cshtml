@{
    ViewBag.Title = "组装与拆分单据查询表单";
    Layout = "~/Views/Shared/_GirdForm.cshtml";
}
<div class="am-form-wrap" id="form">
   
    <div class="col-xs-4 am-form-item"  data-table="Mes_OrgResHead" >
        <div class="am-form-item-title">单据</div>
        <input id="O_OrgResNo" type="text" class="form-control" value="@ViewBag.orderNo" class="form-control" disabled="disabled" style="background: #f1efef" />
    </div>
    <div class="col-xs-4 am-form-item"  data-table="Mes_OrgResHead" >
        <div class="am-form-item-title">订单号<font face="宋体">*</font></div>
        <div id="O_OrderNo" class="form-control" isvalid="yes" checkexpession="NotNull" disabled="disabled"></div>
    </div>
    <div class="col-xs-4 am-form-item"  data-table="Mes_OrgResHead" >
        <div class="am-form-item-title">订单时间<font face="宋体">*</font></div>
        <input id="O_OrderDate" type="text" class="form-control am-input-wdatepicker" onfocus="WdatePicker({ dateFmt: 'yyyy-MM-dd HH:mm:ss' })" value="@DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss")" isvalid="yes" checkexpession="NotNull" disabled="disabled" />
    </div>
    <div class="col-xs-4 am-form-item"  data-table="Mes_OrgResHead" >
        <div class="am-form-item-title">工艺代码<font face="宋体">*</font></div>
        <div id="O_Record" class="form-control" isvalid="yes" checkexpession="NotNull" disabled="disabled"></div>
    </div>
    <div class="col-xs-4 am-form-item"  data-table="Mes_OrgResHead" >
        <div class="am-form-item-title">工序号<font face="宋体">*</font></div>
        <div id="O_ProCode" type="text" class="form-control" isvalid="yes" checkexpession="NotNull" disabled="disabled"></div>
    </div>
    <div class="col-xs-4 am-form-item"  data-table="Mes_OrgResHead" >
        <div class="am-form-item-title">车间名称<font face="宋体">*</font></div>
        <div id="O_WorkShopName" class="form-control" isvalid="yes" checkexpession="NotNull" disabled="disabled"></div>
    </div>
    <div class="col-xs-4 am-form-item" data-table="Mes_OrgResHead">
        <div class="am-form-item-title">车间编码</div>
        <input id="O_WorkShopCode" type="text" class="form-control" disabled="disabled" style="background: #f1efef" />
    </div>
    <div class="col-xs-4 am-form-item"  data-table="Mes_OrgResHead" >
        <div class="am-form-item-title">备注</div>
        <input id="O_Remark" type="text" class="form-control" disabled="disabled" />
    </div>
    @*<div class="col-xs-12 am-form-item" data-table="Mes_RequistHead">
        <div class="am-form-item-title"></div>
        <a id="am_add" class="btn btn-default"><i class="fa fa-plus"></i>&nbsp;添加物料</a>
    </div>*@
    <div class="col-xs-12 am-form-item am-form-item-grid">
        <div id="Mes_OrgResDetail"></div>
    </div>
</div>
@Html.AppendJsFile("/Areas/MesDev/Views/OrgResManager/SearchForm.js")
