@{
    ViewBag.Title = "采购单制作及查询";
    Layout = "~/Views/Shared/_GirdForm.cshtml";
}
<style>
    .jfgrid-data-cell {
        border-bottom: 1px solid #ddd;
        border-right: 1px solid #ddd;
    }
</style>
<div class="am-form-wrap" id="form">
    <div class="col-xs-6 am-form-item"  data-table="Mes_PurchaseHead" >
        <div class="am-form-item-title">采购单号</div>
        <input id="P_PurchaseNo" type="text" class="form-control"  />
    </div>
    <div class="col-xs-6 am-form-item"  data-table="Mes_PurchaseHead" >
        <div class="am-form-item-title">仓库编码<font face="宋体">*</font></div>
        <input id="P_StockCode" type="text" class="form-control" isvalid="yes" checkexpession="NotNull" />
    </div>
    <div class="col-xs-6 am-form-item"  data-table="Mes_PurchaseHead" >
        <div class="am-form-item-title">仓库名称</div>
        <input id="P_StockName" type="text" class="form-control"  />
    </div>
    <div class="col-xs-6 am-form-item"  data-table="Mes_PurchaseHead" >
        <div class="am-form-item-title">供应商编码<font face="宋体">*</font></div>
        <input id="P_SupplyCode" type="text" class="form-control" isvalid="yes" checkexpession="NotNull" />
    </div>
    <div class="col-xs-6 am-form-item"  data-table="Mes_PurchaseHead" >
        <div class="am-form-item-title">供应商名称</div>
        <input id="P_SupplyName" type="text" class="form-control"  />
    </div>
    <div class="col-xs-6 am-form-item"  data-table="Mes_PurchaseHead" >
        <div class="am-form-item-title">生产订单号</div>
        <input id="P_OrderNo" type="text" class="form-control"  />
    </div>
    <div class="col-xs-6 am-form-item"  data-table="Mes_PurchaseHead" >
        <div class="am-form-item-title">订单时间<font face="宋体">*</font></div>
        <input id="P_OrderDate" type="text" class="form-control am-input-wdatepicker" onfocus="WdatePicker({ onpicked: function () { $('#P_OrderDate').trigger('change'); } })" value="@DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss")" isvalid="yes" checkexpession="NotNull" />
    </div>
    
    <div class="col-xs-6 am-form-item"  data-table="Mes_PurchaseHead" >
        <div class="am-form-item-title">备注</div>
        <input id="P_Remark" type="text" class="form-control"  />
    </div>
   
    <div class="col-xs-12 am-form-item am-form-item-grid" >
        <div id="Mes_PurchaseDetail"></div>
    </div>
</div>
@Html.AppendJsFile("/Areas/MesDev/Views/PurchaseHead/Form.js")
