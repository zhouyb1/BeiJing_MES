@{
    ViewBag.Title = "原物料消耗单据";
    Layout = "~/Views/Shared/_Index.cshtml";
}
<div class="am-layout">
    <div class="am-layout-center">
        <div class="am-layout-wrap am-layout-wrap-notitle">
            <div class="am-layout-tool">
                <div class="am-layout-tool-left">
                    
                    <div class="am-layout-tool-item">
                        <div id="multiple_condition_query">
                            <div class="am-query-formcontent">
                                <div class="col-xs-6 am-form-item">
                                    <div class="am-form-item-title">单据编号</div>
                                    <input id="E_ExpendNo" type="text" class="form-control" />
                                </div>
                                <div class="col-xs-6 am-form-item">
                                    <div class="am-form-item-title">单据状状态</div>
                                    <div id="E_Status" class="form-control"></div>
                                </div>
                                <div class="col-xs-6 am-form-item">
                                    <div class="am-form-item-title">仓库</div>
                                    <div id="E_StockCode"></div>
                                </div>
                                <div class="col-xs-6 am-form-item">
                                    <div class="am-form-item-title">物料名称</div>
                                    <div id="M_GoodsName" class="form-control"></div>
                                </div>
                                <div class="col-xs-12 am-form-item">
                                    <div class="am-form-item-title">单据时间</div>
                                    <div id="area" class="col-xs-5 am-form-area">
                                        <input id="OrderDate_S" type="text" class="form-control time" onfocus="WdatePicker({ maxDate: '#F{$dp.$D(\'OrderDate_E\')}', dateFmt: 'yyyy-MM-dd 00:00:00' })" value="@DateTime.Now.ToString("yyyy-MM-dd 00:00:00")" isvalid="yes" checkexpession="NotNull" />
                                    </div>
                                    <div class="am-form-item-title" style="margin-left: 45%">至</div>
                                    <div class="col-xs-5" style="margin-left: 16.5%">
                                        <input id="OrderDate_E" type="text" class="form-control time" onfocus="WdatePicker({ minDate: '#F{$dp.$D(\'OrderDate_S\')}', dateFmt: 'yyyy-MM-dd 23:59:59' })" value="@DateTime.Now.ToString("yyyy-MM-dd 23:59:59")" isvalid="yes" checkexpession="NotNull" />
                                    </div>
                                </div>
                                <div class="col-xs-12 am-form-item">
                                    <div class="am-form-item-title">创建时间</div>
                                    <div id="area" class="col-xs-5 am-form-area">
                                        <input id="StartTime" type="text" class="form-control time" onfocus="WdatePicker({ maxDate: '#F{$dp.$D(\'EndTime\')}', dateFmt: 'yyyy-MM-dd 00:00:00' })" value="@DateTime.Now.ToString("yyyy-MM-dd 00:00:00")" isvalid="yes" checkexpession="NotNull" />
                                    </div>
                                    <div class="am-form-item-title" style="margin-left: 45%">至</div>
                                    <div class="col-xs-5" style="margin-left: 16.5%">
                                        <input id="EndTime" type="text" class="form-control time" onfocus="WdatePicker({ minDate: '#F{$dp.$D(\'StartTime\')}', dateFmt: 'yyyy-MM-dd 23:59:59' })" value="@DateTime.Now.ToString("yyyy-MM-dd 23:59:59")" isvalid="yes" checkexpession="NotNull" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="am-layout-tool-right">
                    <div class=" btn-group btn-group-sm">
                        <a id="am_refresh" class="btn btn-default"><i class="fa fa-refresh"></i></a>
                    </div>
                    <div class=" btn-group btn-group-sm" ayma-authorize="yes">
                        <a id="am_add" class="btn btn-default"><i class="fa fa-plus"></i>&nbsp;新增</a>
                        <a id="am_edit" class="btn btn-default"><i class="fa fa-edit"></i>&nbsp;编辑</a>
                        <a id="am_delete" class="btn btn-default"><i class="fa fa-trash-o"></i>&nbsp;删除</a>
                        <a id="am_auditing" class="btn btn-default"><i class="fa fa-check"></i>&nbsp;审核单据</a>
                        <a id="am_post" class="btn btn-default"><i class="fa fa-send"></i>&nbsp;提交单据</a>
                        <a id="am_print" class="btn btn-default"><i class="fa fa-print"></i>&nbsp;打印</a>
                    </div>
                </div>
            </div>
            <div class="am-layout-body" id="girdtable"></div>
        </div>
    </div>
</div>
@Html.AppendJsFile("/Areas/MesDev/Views/Mes_ExpendManager/Index.js")
