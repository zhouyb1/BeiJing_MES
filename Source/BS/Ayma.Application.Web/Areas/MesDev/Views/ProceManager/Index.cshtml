@{
    ViewBag.Title = "工序管理";
    Layout = "~/Views/Shared/_Index.cshtml";
}
<div class="am-layout" >
    <div class="am-layout-center">
        <div class="am-layout-wrap am-layout-wrap-notitle">
            <div class="am-layout-tool">
                <div class="am-layout-tool-left">
                    <div class="am-layout-tool-item">
                        <div id="multiple_condition_query">
                            <div class="am-query-formcontent">
                                <div class="col-xs-12 am-form-item">
                                    <div class="am-form-item-title">工艺代码</div>
                                    <input id="P_Record" type="text" class="form-control" />
                                </div>
                                <div class="col-xs-12 am-form-item">
                                    <div class="am-form-item-title">工序号</div>
                                    <input id="P_ProCode" type="text" class="form-control" />
                                </div>
                                <div class="col-xs-12 am-form-item">
                                    <div class="am-form-item-title">工序名称</div>
                                    <input id="P_ProName" type="text" class="form-control" />
                                </div>
                                <div class="col-xs-12 am-form-item">
                                    <div class="am-form-item-title">车间</div>
                                    <input id="P_WorkShop" type="text" class="form-control" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="am-layout-tool-right">
                    <div class=" btn-group btn-group-sm">
                        <a id="am_refresh" class="btn btn-default"><i class="fa fa-refresh"></i></a>
                    </div>
                    <div class=" btn-group btn-group-sm" ayma-authorize="yes">
                        <a id="am_add" class="btn btn-default"><i class="fa fa-plus"></i>&nbsp;新增工艺</a>
                        <a id="am_edit" class="btn btn-default"><i class="fa fa-pencil-square-o"></i>&nbsp;编辑工艺</a>
                        <a id="am_addProce" class="btn btn-default"><i class="fa fa-plus"></i>&nbsp;添加工序</a>
                        
                    
                    </div>
                </div>
            </div>
            <div class="am-layout-body" id="girdtable"></div>
        </div>
    </div>
</div>
@Html.AppendJsFile("/Areas/MesDev/Views/ProceManager/Index.js")
